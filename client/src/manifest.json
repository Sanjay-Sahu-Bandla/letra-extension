{
  "name": "Letra",
  "description": "Passively learn a new language every time you open a new tab.",
  "version": "1.0.15",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": ["https://texttospeech.responsivevoice.org/"],
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_title": "Letra"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "letra@letra.com"
    }
  }
}
